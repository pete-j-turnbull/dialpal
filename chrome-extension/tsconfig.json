{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "types": ["chrome"],
    "paths": {
      "@/*": ["./src/*"],
      "@convex/*": ["../convex/*"],
      "@packages/*": ["../packages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "../convex/**/*"]
}
